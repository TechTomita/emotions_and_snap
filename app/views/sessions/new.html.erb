<div class="d-flex">
  
  <!--イメージ画像-->
  <div class="half-view login-image"><div class="half-view image-filter"></div></div>

  <!--フォーム-->
  <div class="half-view">
    <div class="form">
      <%= form_with(url: login_path, scope: :session) do |f| %>
      
      <h2 class="text-center">Sign in</h2>
      
      <%= render "layouts/flash_messages" %>
        
        <div class="input">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        
        <div class="input">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        
        <div class="input">
          <%= f.submit "Sign in", class: "btn btn-dark w-100" %>
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
      <% end %>
    </div>
  </div>
  
</div>